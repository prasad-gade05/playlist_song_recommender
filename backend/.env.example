# Spotify API Configuration
# Get these from https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret
SPOTIFY_REDIRECT_URI=http://localhost:3001/auth/callback

# Google Gemini API
# Get from https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key

# MongoDB Configuration
# For MongoDB Compass (local): mongodb://localhost:27017/spotify_mood_recommender
# For MongoDB Atlas (cloud): mongodb+srv://user:pass@cluster.mongodb.net/spotify_mood_recommender
MONGODB_URI=mongodb://localhost:27017/spotify_mood_recommender

# JWT Secret for session management (change this to any random string)
JWT_SECRET=change-this-to-a-random-secret-string

# Server Configuration
PORT=3001
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# ML Service URL
ML_SERVICE_URL=http://localhost:5000
